<% include ../partials/header %>
<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Create New CampGround</h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                                <input class="form-control" type="text" name="name" placeholder="name">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" name="image" placeholder="Image-Url">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="number" name="price" placeholder="Price" min="000" step="10">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" name="description" placeholder="Campground description">
                        </div>
                        <div class="form-group">
                                <button class="btn btn-primary">SUBMIT !</button>
                        </div>
                </form>
            </div>
    </div>
</div>

<% include ../partials/footer %>